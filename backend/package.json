{
  "name": "inventory-supermarkets-backend",
  "version": "1.0.0",
  "description": "Backend API for supermarket inventory and sales management system",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:prod": "NODE_ENV=production node app.js",
    "dev": "nodemon app.js",
    "dev:debug": "DEBUG=* nodemon app.js",
    "seed:branches": "node scripts/seedBranchesMumbai.js",
    "seed:users": "node scripts/seedUsersEnhanced.js",
    "seed:products": "node scripts/seedProductsRealistic.js",
    "seed:customers": "node scripts/seedCustomersSegmented.js",
    "seed:inventory": "node scripts/seedInventoryDistributed.js",
    "seed:sales": "node scripts/seedSalesConsistent.js",
    "seed:master": "node scripts/seedMasterData.js",
    "seed": "npm run seed:master",
    "validate:data": "node scripts/validateData.js",
    "migrate:permissions": "node scripts/migrateUserPermissions.js",
    "test:rbac": "node scripts/testRBAC.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run test",
    "build": "npm run validate",
    "db:indexes": "node scripts/createIndexes.js"
  },
  "keywords": [
    "inventory",
    "supermarket",
    "sales",
    "management",
    "express",
    "mongodb",
    "jwt",
    "authentication"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.2.0",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.28.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.2",
    "mongodb": "^6.19.0",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.6",
    "pdfkit": "^0.17.2",
    "redis": "^5.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.15.15",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@faker-js/faker": "^10.0.0",
  "@babel/core": "^7.26.0",
  "@babel/preset-env": "^7.26.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
  "globals": "^13.20.0",
  "babel-jest": "^29.7.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mongodb-memory-server": "^10.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.3",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!scripts/**"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
