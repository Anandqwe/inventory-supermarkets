# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/inventory_production?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (Optional - will fallback to memory cache if not available)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
FRONTEND_URL=https://yourdomain.com

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here

# Performance Configuration
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER=300
CACHE_TTL_PRODUCT=600
CACHE_TTL_CATEGORY=1800
CACHE_TTL_ANALYTICS=300

# Database Optimization
DB_POOL_SIZE=10
DB_SOCKET_TIMEOUT=45000
DB_SERVER_SELECTION_TIMEOUT=5000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30